{% extends 'base.html.twig' %}

{% block title %}Etiquettes index{% endblock %}

{% block body %}
    <h1>Etiquettes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etiquette in etiquettes %}
            <tr>
                <td>{{ etiquette.id }}</td>
                <td>{{ etiquette.intitule }}</td>
                <td>
                    <a href="{{ path('etiquettes_show', {'id': etiquette.id}) }}">show</a>
                    <a href="{{ path('etiquettes_edit', {'id': etiquette.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etiquettes_new') }}">Create new</a>
{% endblock %}
