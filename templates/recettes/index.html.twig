{% extends 'base.html.twig' %}

{% block title %}Recettes index{% endblock %}

{% block body %}
    <h1>Recettes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Difficulte</th>
                <th>Temps de préparation</th>
                <th>Temps de cuisson</th>
                <th>Nombre de personnes</th>
                <th>Créateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.nom }}</td>
                <td>{{ recette.difficulte }}</td>
                <td>{{ recette.tempsPrepa }}</td>
                <td>{{ recette.tempsCuisson }}</td>
                <td>{{ recette.nbrPersonnes }}</td>
                <td>{{ recette.createur }}</td>
                <td>
                    <a href="{{ path('recettes_show', {'id': recette.id}) }}">show</a>
                    <a href="{{ path('recettes_edit', {'id': recette.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recettes_new') }}">Create new</a>
{% endblock %}
